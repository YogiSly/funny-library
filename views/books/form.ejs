<form method="POST" class="mt-5" enctype="multipart/form-data">
  <div class="form-group">
    <label for="inputTitle">Заголовок</label>
    <input type="text" value="<%= books.title %>" name="title" class="form-control" id="inputTitle">
  </div>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea rows="3" name="description" class="form-control" id="inputDesc"><%= books.description %></textarea>
  </div>

  <div class="form-group">
    <label for="inputAuthors">Автор</label>
    <input type="text" value="<%= books.authors %>" name="authors" class="form-control" id="inputAuthors">
  </div>

  <div class="form-check">
    <input type="checkbox" name="favorite" class="form-check-input" id="inputFavorite" value="true" <% if
      (books.favorite) { %>checked<% } %> >
      <label class="form-check-label" for="inputFavorite">Избранное</label>
  </div>

  <div class="form-group">
    <label for="inputFileCover">Обложка</label>
    <input type="file" value="<%= books.fileCover %>" name="fileCover" class="form-control-file" id="inputFileCover">
  </div>

  <div class="form-group">
    <label for="inputFileName">Название файла</label>
    <input type="text" value="<%= books.fileName %>" name="fileName" class="form-control" id="inputFileName">
  </div>

  <div class="form-group">
    <label for="inputFileBook">Книга</label>
    <input type="file" value="<%= books.fileBook %>" name="fileBook" class="form-control-file" id="inputFileBook">
  </div>

  <div class="form-group text-right ">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>