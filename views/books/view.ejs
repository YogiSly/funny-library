<%- include('../port/layout-start', {title: title}) %>
    <%- include('../port/menu') %>

        <h1>
            <%= title %>
        </h1>

        <div class="row">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">
                            <b>Заголовок:</b>
                            <%= books.title %>
                        </h5>
                        <p class="card-text">
                            <b>Описание:</b>
                            <%= books.description %>
                        </p>
                        <p class="card-text">
                            <b>Автор:</b>
                            <%= books.authors %>
                        </p>
                        <p class="card-text">
                            <b>Избранное:</b>
                            <%= books.favorite %>
                        </p>
                        <p class="card-text">
                            <b>Обложка:</b>
                            <img src="<%= books.fileCover %>" style="width: 100px; height: 100px;" alt="">

                        </p>
                        <p class="card-text">
                            <b>Название файла:</b>
                            <a href="<%= books.fileBook %>"><%= books.fileName %></a>
                            
                        </p>
                        <div class="text-right">
                            <a class="btn btn-sm btn-primary" href="/books/update/<%= books.id %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/books/delete/<%= books.id %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <%- include('../port/layout-end') %>